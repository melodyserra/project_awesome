
  <div id="user-nav">
    <% if @current_user %>
      <%= link_to root_path do %>
      <%= image_tag(@current_user.image, :id => "nav-image") %> <%= @current_user.first_name %> <%= @current_user.last_name %>
      <% end %>

      <%= button_to('Sign out', signout_path, :class => 'btn btn-large btn-default', :method => :get, id: "sign_out")  %>
    <% else %>
      <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
    <% end %>
  </div>


<!-- input to store group id to be passed to AJAX request -->
<input type="hidden" id="group_id" data-path="<%= @group.id %>" name="group_id" value="taco">

<!-- searchbox and map canvas -->
<input id="pac-input" class="controls" type="text" placeholder="Search Box">
<div id="map-canvas"></div>

